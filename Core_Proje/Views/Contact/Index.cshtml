@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_YeniAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MessageID</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td><a href="/Contact/DeleteContact/@item.MessageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Contact/ContactDetails/@item.MessageID" class="btn btn-outline-success">Mesajı Aç</a></td>
                                <td>@item.Date</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



