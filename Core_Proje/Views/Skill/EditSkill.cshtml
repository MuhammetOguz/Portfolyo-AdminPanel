@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_YeniAdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0"> Yetenek Düzenleme Sayfası</h3>
</div>
<br />

<form class="form-group" asp-action="EditSkill" asp-controller="Skill" method="post">

    <input asp-for="SkillID" type="hidden" />

    <label asp-for="Title">Yetenek Adı:</label> <br />

    <input asp-for="Title" class="form-control" /> <br />

    <label asp-for="Value">Yetenek Oranı:</label> <br />

    <input asp-for="Value" class="form-control" /> <br /><br />

    <button type="submit" class="btn btn-success">Güncelle</button>

</form>